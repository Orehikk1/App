import SwiftUI

// ğŸ“Œ ĞœĞ¾Ğ´ĞµĞ»ÑŒ ĞºĞ°Ñ€Ñ‚Ğ¾Ñ‡ĞºĞ¸ (Card)
struct Card: Identifiable, Codable, Equatable {
    let id: UUID
    let title: String
    let content: String
    let imageName: String
    init(id: UUID = UUID(), title: String, content: String, imageName: String) {
        self.id = id
        self.title = title
        self.content = content
        self.imageName = imageName
    }
}

// ğŸ“Œ ĞœĞ¾Ğ´ĞµĞ»ÑŒ ĞºÑƒÑ€ÑĞ° Ğ²Ğ°Ğ»ÑÑ‚
struct ExchangeRateResponse: Codable {
    let conversion_rates: [String: Double]
}

// ğŸ“Œ ViewModel (ĞºĞ°Ñ€Ñ‚Ğ¾Ñ‡ĞºĞ¸, ĞºÑƒÑ€Ñ EUR â†’ HUF)
class CardViewModel: ObservableObject {
    @Published var cards: [Card] = []
    @Published var euroToHufRate: Double? = nil

    init() {
        self.cards = loadCards()
        fetchExchangeRates()
    }

    // ğŸ“Œ ĞŸĞ¾Ğ»ÑƒÑ‡ĞµĞ½Ğ¸Ğµ ĞºÑƒÑ€ÑĞ° EUR â†’ HUF
    func fetchExchangeRates() {
        guard let url = URL(string: "https://v6.exchangerate-api.com/v6/e68a27854c27f7174870f216/latest/EUR") else {
            print("âŒ ĞÑˆĞ¸Ğ±ĞºĞ°: ĞĞµĞ²ĞµÑ€Ğ½Ñ‹Ğ¹ URL")
            return
        }

        let task = URLSession.shared.dataTask(with: url) { data, _, error in
            guard let data = data, error == nil else {
                print("âŒ ĞÑˆĞ¸Ğ±ĞºĞ° ÑĞµÑ‚Ğ¸: \(error?.localizedDescription ?? "ĞĞµĞ¸Ğ·Ğ²ĞµÑÑ‚Ğ½Ğ°Ñ Ğ¾ÑˆĞ¸Ğ±ĞºĞ°")")
                return
            }

            do {
                let decodedData = try JSONDecoder().decode(ExchangeRateResponse.self, from: data)
                DispatchQueue.main.async {
                    self.euroToHufRate = decodedData.conversion_rates["HUF"]
                }
            } catch {
                print("âŒ ĞÑˆĞ¸Ğ±ĞºĞ° Ğ´ĞµĞºĞ¾Ğ´Ğ¸Ñ€Ğ¾Ğ²Ğ°Ğ½Ğ¸Ñ JSON: \(error)")
            }
        }
        task.resume()
    }
}

// ğŸ“Œ Ğ¤ÑƒĞ½ĞºÑ†Ğ¸Ñ Ğ·Ğ°Ğ³Ñ€ÑƒĞ·ĞºĞ¸ ĞºĞ°Ñ€Ñ‚Ğ¾Ñ‡ĞµĞº Ğ¸Ğ· `cards.json`
func loadCards() -> [Card] {
    guard let url = Bundle.main.url(forResource: "cards", withExtension: "json") else {
        print("âŒ Ğ¤Ğ°Ğ¹Ğ» `cards.json` Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½!")
        return []
    }
    do {
        let data = try Data(contentsOf: url)
        let decodedCards = try JSONDecoder().decode([Card].self, from: data)
        return decodedCards
    } catch {
        print("âŒ ĞÑˆĞ¸Ğ±ĞºĞ° Ğ´ĞµĞºĞ¾Ğ´Ğ¸Ñ€Ğ¾Ğ²Ğ°Ğ½Ğ¸Ñ JSON: \(error)")
        return []
    }
}

import SwiftUI

// ğŸ“Œ Ğ“Ğ»Ğ°Ğ²Ğ½Ğ¾Ğµ Ğ¾ĞºĞ½Ğ¾ (ĞºĞ°Ñ€Ñ‚Ğ¾Ñ‡ĞºĞ¸, ĞºÑƒÑ€Ñ EUR â†’ HUF)
struct ContentView: View {
    @StateObject private var viewModel = CardViewModel()
    let columns = [GridItem(.adaptive(minimum: 150), spacing: 20)]
    
    //ğŸ”¹ ĞŸĞµÑ€ĞµĞ¼ĞµĞ½Ğ½Ğ°Ñ Ğ´Ğ»Ñ ÑƒĞ¿Ñ€Ğ°Ğ²Ğ»ĞµĞ½Ğ¸Ñ ÑĞ¾ÑÑ‚Ğ¾ÑĞ½Ğ¸ĞµĞ¼ (ÑĞºÑ€Ñ‹Ñ‚Ğ¾/Ğ¿Ğ¾ĞºĞ°Ğ·Ğ°Ğ½Ğ¾)
        @State private var isTextExpanded = false

    var body: some View {
        NavigationView {
            ScrollView {
                VStack(spacing: 20) {
                    // ğŸ“Œ ĞšÑƒÑ€Ñ Ğ²Ğ°Ğ»ÑÑ‚ EUR â†’ HUF
                    VStack {
                        if let euroToHufRate = viewModel.euroToHufRate {
                            Text("Exchange Rate: 1 EUR = \(euroToHufRate, specifier: "%.2f") HUF")
                                .font(.title2)
                                .bold()
                                .foregroundColor(.black)
                        } else {
                            Text("Loading exchange rate EUR â†’ HUF...")
                                .foregroundColor(.gray)
                                .font(.body)
                        }
                    }
                    .padding(.top, 10)

                    // ğŸ“Œ Ğ—Ğ°Ğ³Ğ¾Ğ»Ğ¾Ğ²Ğ¾Ğº
                    Text("Information for Guides")
                        .font(.largeTitle)
                        .bold()
                        .foregroundColor(.primary)
                        .padding(.top)
                    
                    VStack {
                        Button(action: {
                            withAnimation(.easeInOut(duration: 0.3)) {isTextExpanded.toggle()
                            }
                        }) {
                            HStack {
                                Text("Read More")
                                    .font(.headline)
                                    .foregroundColor(.white)
                                
                                Image(systemName: isTextExpanded ? "chevron.up" : "chevron.down")
                                    .foregroundColor(.white)
                            }
                            .frame(maxWidth: .infinity)
                            .padding()
                            .background(isTextExpanded ? Color.blue : Color.gray.opacity(0.8))
                            .cornerRadius(15)
                            .shadow(radius: 5)
                        }
                        
                        ZStack {
                            VStack(alignment: .leading, spacing: 10) {
                                if isTextExpanded {
                                    Text("""
                        This short book was written for the guides of Segway tours, and it contains all the information you need about buildings and monuments during the stops of our tours.
                        """)
                                    Text("""
                        - **Regular History** will be marked with a **#** sign.
                        - **Segway stop History** will be marked with a **â€¢** sign.
                        """)
                                    .font(.headline)
                                    Text("""
                        The reason why you should know all this is that some tourists might ask more questions about the past of the city and the country. We really hope this guide is understandable and clear.
                        """)
                                }
                            }
                            .font(.body)
                            .foregroundColor(.primary)
                            .padding()
                            .background(Color(UIColor.systemBackground))
                            .clipShape(RoundedRectangle(cornerRadius: 15))
                            .shadow(radius: 5)
                            .frame(maxWidth: .infinity, alignment: .leading) // ğŸ‘ˆ **Ğ˜ÑĞ¿Ñ€Ğ°Ğ²Ğ»ĞµĞ½Ğ¾**
                            .padding(.horizontal)
                            .padding(.vertical, 5)
                            .animation(.easeInOut(duration: 0.3), value: isTextExpanded)
                            .transition(.opacity)
                        }
                        .frame(height: isTextExpanded ? nil : 0) // ğŸ”¹ Ğ¤Ğ¸ĞºÑĞ¸Ñ€ÑƒĞµĞ¼ Ğ²Ñ‹ÑĞ¾Ñ‚Ñƒ, Ñ‡Ñ‚Ğ¾Ğ±Ñ‹ ĞºĞ°Ñ€Ñ‚Ğ¾Ñ‡ĞºĞ¸ Ğ½Ğµ Ğ´Ğ²Ğ¸Ğ³Ğ°Ğ»Ğ¸ÑÑŒ
                        .opacity(isTextExpanded ? 1 : 0)
                        .animation(.easeInOut(duration: 0.3), value: isTextExpanded)
                        .clipped()
                }
                    
                    // ğŸ“Œ ĞšĞ°Ñ€Ñ‚Ğ¾Ñ‡ĞºĞ¸
                    LazyVGrid(columns: columns, spacing: 20) {
                        ForEach(viewModel.cards) { card in
                            NavigationLink(destination: CardDetailView(card: card)) {
                                CardView(card: card)
                            }
                            .buttonStyle(PlainButtonStyle())
                        }
                    }
                    .padding()
                    .id("gridView")
                    .animation(nil, value: UUID())

                    // ğŸ“Œ Ğ‘Ğ»Ğ¾Ğº Ñ ÑĞ¾Ñ†ÑĞµÑ‚ÑĞ¼Ğ¸
                    VStack(spacing: 10) {
                        Text("Our social media!")
                            .font(.headline)
                            .foregroundColor(.primary)

                        HStack(spacing: 20) {
                            SocialMediaButton(iconName: "instagram", url: "https://www.instagram.com/@segwaybp")
                            SocialMediaButton(iconName: "youtube", url: "https://www.youtube.com/@segwaybp-budapest")
                            SocialMediaButton(iconName: "tiktok", url: "https://www.tiktok.com/@segwaybp")
                        }
                    }
                    .padding(.top, 20)
                    
                    Text("Written by ErnÅ‘ GÃ¡spÃ¡r")
                        .font(.footnote)
                        .foregroundColor(.gray)
                        .padding(.bottom, 20)
                }
            }
        }
    }
}

// ğŸ“Œ Ğ’Ğ¸Ğ´ ĞºĞ°Ñ€Ñ‚Ğ¾Ñ‡ĞºĞ¸
struct CardView: View {
    let card: Card
    var body: some View {
        VStack {
            Image(card.imageName)
                .resizable()
                .scaledToFill()
                .frame(width: 150, height: 150)
                .clipShape(RoundedRectangle(cornerRadius: 20))
                .shadow(radius: 5)
            Text(card.title)
                .font(.headline)
                .foregroundColor(.primary)
                .multilineTextAlignment(.center)
                .frame(width: 150, height: 40)
        }
        .contentShape(Rectangle())
    }
}

import SwiftUI

// ğŸ“Œ Ğ”ĞµÑ‚Ğ°Ğ»ÑŒĞ½Ñ‹Ğ¹ ÑĞºÑ€Ğ°Ğ½ ĞºĞ°Ñ€Ñ‚Ğ¾Ñ‡ĞºĞ¸ (Ñ Ñ„Ğ¾Ñ‚Ğ¾ Ğ²Ğ½ÑƒÑ‚Ñ€Ğ¸ Ñ‚ĞµĞºÑÑ‚Ğ°)
struct CardDetailView: View {
    let card: Card
    
    var body: some View {
        ScrollView {
            VStack(alignment: .leading, spacing: 15) {
                let sections = parseContent(card.content)

                ForEach(sections.indices, id: \.self) { index in
                    let section = sections[index]

                    if section.starts(with: "[IMAGE:") {
                        let imageName = section
                            .replacingOccurrences(of: "[IMAGE:", with: "")
                            .replacingOccurrences(of: "]", with: "")

                        if let uiImage = UIImage(named: imageName) {
                            Image(uiImage: uiImage)
                                .resizable()
                                .scaledToFit()
                                .cornerRadius(15)
                                .padding(.vertical, 10)
                        } else {
                            Text("âš ï¸ Image '\(imageName)' not found!")
                                .foregroundColor(.red)
                                .font(.caption)
                        }
                    } else {
                        // ğŸ“Œ ĞŸĞ¾Ğ´Ğ´ĞµÑ€Ğ¶ĞºĞ° Markdown Ğ´Ğ»Ñ Ñ‚ĞµĞºÑÑ‚Ğ°
                        if let attributedString = try? AttributedString(markdown: section) {
                            Text(attributedString)
                                .font(.body)
                                .foregroundColor(.primary)
                                .padding(.vertical, 5)
                        } else {
                            Text(section)
                                .font(.body)
                                .foregroundColor(.primary)
                                .padding(.vertical, 5)
                        }
                    }
                }
            }
            .padding()
            
        }
        .navigationTitle(card.title)
    }
}

// ğŸ“Œ ĞšĞ½Ğ¾Ğ¿ĞºĞ° ÑĞ¾Ñ†ÑĞµÑ‚ĞµĞ¹
struct SocialMediaButton: View {
    let iconName: String
    let url: String

    var body: some View {
        Button(action: {
            openURL(url)
        }) {
            Image(iconName)
                .resizable()
                .frame(width: 40, height: 40)
                .clipShape(Circle())
                .shadow(radius: 5)
        }
    }
}

// ğŸ“Œ Ğ¤ÑƒĞ½ĞºÑ†Ğ¸Ñ Ğ¾Ñ‚ĞºÑ€Ñ‹Ñ‚Ğ¸Ñ ÑÑÑ‹Ğ»ĞºĞ¸
func openURL(_ urlString: String) {
    if let url = URL(string: urlString) {
        UIApplication.shared.open(url)
    }
}

// ğŸ“Œ Ğ¤ÑƒĞ½ĞºÑ†Ğ¸Ñ Ñ€Ğ°Ğ·Ğ´ĞµĞ»ĞµĞ½Ğ¸Ñ Ñ‚ĞµĞºÑÑ‚Ğ° (Ğ±ĞµĞ· Ğ½ÑƒĞ¼ĞµÑ€Ğ°Ñ†Ğ¸Ğ¸)
func parseContent(_ content: String) -> [String] {
    return content.components(separatedBy: "\n\n")
}

// ğŸ“Œ Ğ—Ğ°Ğ¿ÑƒÑĞº Ğ¿Ñ€Ğ¸Ğ»Ğ¾Ğ¶ĞµĞ½Ğ¸Ñ
@main
struct GuideApp: App {
    var body: some Scene {
        WindowGroup {
            ContentView()
        }
    }
}
